{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dll",
            "type": "shell",
            "command": "g++",
            "args": [
                "-shared",
                "-DBUILDING_DLL",
                "-Wall",
                "-v",
                "-o",
                "${workspaceFolder}/build/libpwbot.dll",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/memory_utils.cpp",
                "-Wl,--out-implib,${workspaceFolder}/build/libpwbot.a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
